{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "../generated/prisma": ["./generated/prisma/index"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/.prisma/client"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
